<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Company</h1>
        <div class="col-6 offset-3">
            <form action="/editcomp?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <div class="mb-3">
                        <label class="form-label" for="name">Enter Company Name</label>
                        <input class="form-control" type="text" id="name" name="name" value="<%=company.name%>"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="about">About Company</label>
                        <textarea class="form-control" type="text" id="about" name="about" value="<%=company.about%>"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Job Description</label>
                        <textarea class="form-control" type="text" id="description" name="description"
                            value="<%=company.description%>" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3 form-group row">
                        <label class="form-label">Qualification Criteria</label>
                        <div class="col-4">
                            <label class="form-label" for="ssc">SSC Percentage</label>
                            <input class="form-control" id="ssc" name="ssc" type="text" value="<%=company.ssc%>"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="col-4">
                            <label class="form-label" for="hsc">HSC Percentage</label>
                            <input class="form-control" id="hsc" name="hsc" type="text" value="<%=company.hsc%>"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="col-4">
                            <label class="form-label" for="graduation">Graduation CGPA</label>
                            <input class="form-control" id="graduation" name="graduation" type="text"
                                value="<%=company.graduation%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="skills">Skills</label>
                        <input class="form-control" type="text" id="skills" name="skills" value="<%=company.skills%>"
                            required></input>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Update Company</button>
                    </div>
            </form>
            </form>
            <a href="/admin">Back</a>

        </div>
    </div>